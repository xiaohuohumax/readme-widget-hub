        }
      ]
    },
    {
      "alt": "Banner",
      "alt:pt-BR": "Banner",
      "href": "https://widgetbite.com/banner?title=Badge%20Collection&subtitle=&backgroundpalette=pastels&fontpalette=pastels&titletransform=rotate",
      "images": [
        {
          "alt": "Banner",
